{{define "status"}}
<!DOCTYPE html>
<html lang="en">
{{template "html-head" printf "Status %s" .StatusType}}
<body class="{{ theme }}">
    {{template "navbar" . }}

    <div class="container" data-controller="status">
        <br/>
        <div class="alert alert-info">
            {{if eq .StatusType "Not Found"}}
                <h5>No matching page, block, address or transaction that could be found</h5>
                <h5>{{.Message}}</h5>
            {{else if eq .StatusType "Wrong Network"}}
                {{if eq .Message "Looks like you are searching for a bitcoin address, you can "}}
                    <h5>{{.Message}}<a href="https://insight.bitpay.com">find that here.</a></h5>
                {{else}}
                    {{if eq .NetName "Mainnet"}}
                        <h5>{{.Message}}<a href="http://testnet.dcrdata.org/">switch to testnet here.</a></h5>
                    {{else}}
                        <h5>{{.Message}}<a href="http://explorer.dcrdata.org/">switch to mainnet here.</a></h5>
                    {{end}}
                {{end}}
            {{else}}
                {{if eq .StatusType "Future Block"}}
                    <h5 id="futureblock">{{.Message}}</h5>
                {{else}}
                    <h5>{{.Message}}</h5>
                {{end}}
            {{end}}
        </div>
        <div id="initial-load" class="sync-progress">
        {{if eq .StatusType "Blocks Syncing"}}
            <img src="/images/loader.gif" style="margin: 0px auto;display: block;"/>
        {{end}}
        </div>
        <div id="addresses-sync" class="sync-progress"></div>
    </div>
{{ template "footer" . }}
</body>
</html>
{{end}}
